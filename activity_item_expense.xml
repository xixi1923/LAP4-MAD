<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/vCategoryIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:minHeight="72dp"
            android:background="#009688"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_food_category"
            android:background="@drawable/circle_background_food"
            android:padding="8dp"
            android:contentDescription="Category Icon"
            app:tint="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch with friends"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingVertical="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvAmountCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-12,000 KHR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/10/2025"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>